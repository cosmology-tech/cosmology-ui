{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}